<tr {{bind-attr class="view.color"}}>
  <td>{{input type="checkbox" checked=selected}}</td>
  <td>{{id}}</td>
  <td>
    <a style="text-decoration:none" data-toggle="collapse" data-parent="#accordion" {{bind-attr href="view.href"}}>{{title}}</a>
  </td>
  <td>{{clean-on-empty fullName}}</td>
  <td>{{clean-on-empty email}}</td>
  <td>{{clean-on-empty phone}}</td>
  <td>{{section}}</td>
  <td>{{coverageType}}</td>
  <td>{{publishDate}}</td>
  <td>{{dueDate}}</td>
  <td>
    <a style="text-decoration:none" {{bind-attr href="view.edit"}}><span class="glyphicon glyphicon-pencil"></span></a>
  </td>
  <td>
    <a style="text-decoration:none" data-toggle="collapse" data-parent="#accordion" {{bind-attr href="view.href"}}> <span class="glyphicon glyphicon-list"></span> </a>
  </td>
  <td>
    <a {{action "deleteJob" this}} style="text-decoration:none;"><span class="glyphicon glyphicon-remove"></span></a>
  </td>
</tr>
<tr>
  <td colspan="13" style="padding: 0; text-align: left; position: relative; left: -1100px; padding-top: 50px; min-width: 600px;">
    <div {{bind-attr id="view.id"}} class="panel-collapse collapse">
      <div class="panel-body">
        <dl class="dl-horizontal">
          <dt>Contact Information</dt>
          <dd>{{contact}}</dd>
          <dt>Details</dt>
          <dd>{{details}}</dd>
          {{#if view.eventLoc}}
          <dt>Event Location</dt>
          <dd>{{view.eventLoc}}</dd>
          {{/if}}
          {{#if date}}
          <dt>Date</dt>
          <dd>{{date}}</dd>
          {{/if}}
          {{#if time}}
          <dt>Time</dt>
          <dd>{{time}}<dd>
          {{/if}}
          {{#if daily_member}}
          <br>
          <dt>Assignee</dt>
          <dd>{{daily_member.name}}</dd>
          <dt>Contact Information</dt>
          <dd>{{daily_member.email}} | <em>{{daily_member.phone}}</em></dd>
          {{/if}}
        </dl>

        <em style="padding-left:30px;" class="text-muted">Requested on {{createdAt}}</em>
      </div>
    </div>
  </td>
</tr>
