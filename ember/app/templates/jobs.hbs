<div class="content job-list">
  <div style="margin-bottom:10px;">
    <span class="col-md-2 text-center col-sm-12 col-xs-12 col-padding"><h4 style="margin:0;line-height:34px;">Current Jobs</h4></span>
    <span class="col-md-2 col-sm-12 col-xs-12 col-padding">
      {{view "select" class="form-control" content=filters optionLabelPath="content.name" optionValuePath="content.state" value=filter}}
    </span>
    <span id="daily-select" class="col-md-4 col-sm-12 col-xs-12 col-padding">
      {{view "select" class="form-control" content=daily_members optionLabelPath="content.name" value=selectedDailyMember prompt="Select a Daily member to assign"}}
    </span>
    <div class="col-md-4 col-sm-12 col-xs-12 col-padding">
      <div style="margin: auto; max-width: 260px;">
        <button {{action "showMailModal" "assign"}} {{bind-attr class=":btn :btn-info isAssignable:disabled"}}><span class="glyphicon glyphicon-envelope"></span></button>
        <button {{action "showMailModal" "reject"}} {{bind-attr class=":btn :btn-danger isSelectedJobs:disabled"}}><span class="glyphicon glyphicon-trash"></span></button>
        <button {{action "changeState" 0}} {{bind-attr class=":btn :btn-default  isSelectedJobs:disabled"}}><span class="glyphicon glyphicon-eject"></span></button>
        <button {{action "changeState" 4}} {{bind-attr class=":btn :btn-warning  isSelectedJobs:disabled"}}><span class="glyphicon glyphicon-exclamation-sign"></span></button>
        <button {{action "changeState" 5}} {{bind-attr class=":btn :btn-primary  isSelectedJobs:disabled"}}><span class="glyphicon glyphicon-tasks"></span></button>
        <button {{action "changeState" 3}} {{bind-attr class=":btn :btn-success  isSelectedJobs:disabled"}}><span class="glyphicon glyphicon-ok"></span></button>
      </div>
    </div>
  </div>

  <div class="table" style="overflow:hidden">
  <table class="table">
    <thead>
      <tr>
        {{#each columns itemController="columnItem"}}
        <th {{action "toggleSort" value}}>
          {{name}}
          {{#if sortedAsc}}
            <i class="glyphicon glyphicon-chevron-up"></i>
          {{/if}}
          
          {{#if sortedDesc}}
            <i class="glyphicon glyphicon-chevron-down"></i>
          {{/if}}
        </th>
        {{/each}}
        <th>Edit</th>
        <th>Details</th>
        <th>Delete</th>
      </tr>
    </thead>
      {{collection "jobs-collection"}}
  </table>
  </div>
</div>
