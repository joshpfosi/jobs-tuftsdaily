<label class="control-label" for=value>{{label}}</label>
{{#if rows}}
  {{textarea rows=rows type=type classNames="form-control" value=value placeholder=placeholder disabled=disabled readonly=readonly}}
{{else}}
  {{input type=type classNames="form-control" value=value placeholder=placeholder disabled=disabled readonly=readonly}}
{{/if}}
{{#unless hideMsg}}
  {{#if error}}
    <span class="help-block">{{error}}</span>
  {{/if}}
{{/unless}}
