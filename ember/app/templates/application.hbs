<div class="wrapper">
  <nav class="nav navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#tufts-nav">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar tufts-brown"></span>
          <span class="icon-bar tufts-brown"></span>
          <span class="icon-bar tufts-brown"></span>
        </button>
        {{#link-to "index" class="navbar-left navbar-btn"}}
          <img class="logo" src="/assets/logo.png" alt="Tufts Daily Header Image"/>
        {{/link-to}}

      </div>
      <!-- TODO: remove margin top for vertical alignment -->
      <div class="navbar-collapse collapse" id="tufts-nav" style="height: 1px;">
        {{#if session.isAuthenticated}}
          <button {{action "invalidateSession"}} class="btn btn-brown navbar-btn navbar-right">Sign Out</button>
          {{#link-to "settings" class="navbar-link navbar-right"}}<button class="btn btn-brown navbar-btn">Members</button>{{/link-to}}
          {{#link-to "jobs" class="navbar-link navbar-right"}}    <button class="btn btn-brown navbar-btn">Jobs</button>{{/link-to}}
          {{#link-to "archive" class="navbar-link navbar-right"}} <button class="btn btn-brown navbar-btn">Archive</button>{{/link-to}}
          {{#link-to "stock" class="navbar-link navbar-right"}}   <button class="btn btn-brown navbar-btn">Research Requests</button>{{/link-to}}
        {{else}}
        <form role="form" class="navbar-form navbar-right" {{action "authenticate" on="submit"}}>
          {{form-field-text name="email" value=identification error=credErrors hideMsg=true placeholder="Enter your email..."   type="email"}}
          {{form-field-text name="password" value=password error=credErrors hideMsg=true placeholder="Enter your password..." type="password"}}
          <button class="btn btn-brown" type="submit">Sign In</button>
        </form>
        {{/if}}
    </div>
  </nav>

    <!-- throw in some notifications for different things -->
    {{ember-notify messageStyle='bootstrap'}}

  <div class="container">
    {{outlet}}
  </div>
</div>

<div class="footer">
  <hr>
  <p class="text-muted credit">Developed and designed by Joshua Pfosi</p>
  <p class="text-muted credit"> Copyright Â© 2014 Joshua Pfosi </p>
</div>
