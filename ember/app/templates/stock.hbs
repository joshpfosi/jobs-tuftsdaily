<div class="content job-list">
  <div style="margin-bottom:10px;">
    <span class="col-md-2 text-center col-sm-12 col-xs-12 col-padding"><h4 style="margin:0;line-height:34px;">File Photos</h4></span>
    <div class="col-md-2 col-sm-12 col-xs-12 col-md-offset-8 col-padding">
      <div style="margin: auto; max-width: 84px;">
        <button {{action "showMailModal" "reject"}} {{bind-attr class=":btn :btn-danger isSelectedJobs:disabled"}}><span class="glyphicon glyphicon-trash"></span></button>
        <button {{action "changeState" 5}} {{bind-attr class=":btn :btn-primary  isSelectedJobs:disabled"}}><span class="glyphicon glyphicon-tasks"></span></button>
      </div>
    </div>
  </div>

  <div class="table">
  <table class="table table-condensed">
    <thead>
      <tr>
        {{#each columns itemController="columnItem"}}
        <th {{action toggleSort value}}>
          {{name}}
          {{#if sortedAsc}}
            <i class="glyphicon glyphicon-chevron-up"></i>
          {{/if}}
          
          {{#if sortedDesc}}
            <i class="glyphicon glyphicon-chevron-down"></i>
          {{/if}}
        </th>
        {{/each}}
        <th>Edit</th>
        <th>Details</th>
      </tr>
    </thead>
      {{collection "jobs-collection"}}
  </table>
  </div>
</div>
